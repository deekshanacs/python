
def calculate_average_age(people):
    total_age = sum(age for _, age in people)
    num_people = len(people)
    average_age = total_age / num_people if num_people > 0 else 0
    return average_age
people_list = [("Alice", 25), ("Bob", 30), ("Charlie", 35), ("David", 40)]  # Example list of tuples

average_age = calculate_average_age(people_list)


print("Average age of all the people:", average_age)
